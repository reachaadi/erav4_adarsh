{
    "manifest_version": 3,
    "name": "Gemini Quick Ask",
    "version": "1.0",
    "description": "Select text, right-click, and ask Gemini.",
    "permissions": [
        "contextMenus",
        "clipboardWrite",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
